<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_view_map_audioInfo_audioTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Track"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#636363"
        android:lineSpacingExtra="5.4sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_border"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
    />

    <View
        android:id="@+id/view_border"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_map_audioInfo_audioTrack"
        android:layout_marginTop="11dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/view_border"
        android:layout_marginTop="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>